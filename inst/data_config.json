{
  "data_files": {
    "files_table": {
      "synapse_id": "syn24172462"
    },
    "publications_table": {
      "synapse_id": "syn24172464"
    },
    "studies_table": {
      "synapse_id": "syn24172465"
    },
    "tools_table": {
      "synapse_id": "syn24172466"
    }
  },
  "modules": {
    "summary_snapshot": {
      "outputs": {
        "overview_boxes": {
          "box1": {
            "title": "Studies",
            "table": "studies_table",
            "columns": ["grantId"],
            "icon": "university"
          },
          "box2": {
            "title": "Files",
            "table": "files_table",
            "columns": ["id"],
            "icon": "file"
          },
          "box3": {
            "title": "Samples",
            "table": "files_table",
            "columns": ["individualID", "specimenID"],
            "icon": "file"
          },
          "box4": {
            "title": "Publications",
            "table": "publications_table",
            "columns": ["publicationId"],
            "icon": "pencil"
          }
        },
        "consortium_activity": {
          "table": "files_table",
          "empty_table_message": "The investigator/investigators has/have not uploaded any files yet. Please check back later.",
          "columns": [
            {
              "name": "year",
              "display_name": "Year",
              "type": "integer"
            },
            {
              "name": "consortium",
              "display_name": "Consortium",
              "na_replace": "Not Applicable",
              "type": "character"
            },
            {
              "name": "accessType",
              "display_name": "Access Type",
              "na_replace": "NOT ANNOTATED",
              "type": "character"
            }
          ],
          "plot": {
            "x": "Consortium",
            "fill": "Access Type",
            "facet": "Year"
          },
          "tooltips": ["count", "fill"]
        },
        "resources_generated": {
          "table": "files_table",
          "empty_table_message": "The investigator/investigators has/have not uploaded any files yet. Please check back later.",
          "columns": [
            {
              "name": "year",
              "display_name": "Year",
              "type": "integer"
            },
            {
              "name": "studyName",
              "display_name": "Study Name",
              "type": "character",
              "na_replace": "Not Applicable"
            },
            {
              "name": "dataType",
              "display_name": "Data Type",
              "type": "character",
              "replace_values": {
                "drugScreen": "Drug Screening", 
                "drugCombinationScreen": "Drug Screening",
                "immunofluorescence": "Immunofluorescence",
                "genomicVariants": "Genomic Variants",
                "geneExpression": "Gene Expression",
                "cellularPhysiology": "Cellular Physiology",
                "chromatinActivity": "Chromatin Activity"
              },
              "na_replace": "Other",
              "default_replace": "Other"
            }
          ],
          "plot": {
            "x": "Data Type",
            "fill": "Study Name",
            "facet": "Year"
          },
          "tooltips": ["count", "fill"]
        },
        "merged_table": {            
          "join_column" : "studyName",
          "tables": ["studies_table", "files_table"],
          "columns": [
            ["studyName", "consortium"],
            ["studyName", "resourceType", "year", "assay"]
          ]
        },
        "file_upload_timeline":{
          "empty_table_message": "The studies have not uploaded any files yet. Please check back later.",
          "table": "merged_table",
          "filter_column": "consortium",
          "columns": [
            {
              "name": "studyName",
              "display_name": "Study Name",
              "type": "character",
              "na_replace": "pendingAnnotation"
            },
            {
              "name": "resourceType",
              "display_name": "Resource Type",
              "type": "character",
              "na_replace": "pendingAnnotation"
            },
            {
              "name": "year",
              "type": "integer",
              "display_name": "Year" 
            }
          ],
          "plot": {
            "x": "Study Name",
            "y": "Count",
            "fill": "Resource Type",
            "facet": "Year"
          },
          "tooltips": ["Count", "fill"]
        }
      }
    }
  }
}